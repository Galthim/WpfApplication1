<Window x:Class="WpfApplication1.MainMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainMenu" Height="600" Width="800">
    <Grid Background="Gray">
        <StackPanel HorizontalAlignment="Left" Height="549" Margin="10,10,0,0" VerticalAlignment="Top" Width="136">
            <Button x:Name="EnterInvoice_Button" Click="EnterInvoice_Button_Click" Content="Enter Invoice"/>
            <Button x:Name="GetInvoice_Button" Click="GetInvoice_Button_Click" Content="Retrieve Invoice"/>
            <Button x:Name="Summary" Click="Summary_Click" Content="Summary"/>
        </StackPanel>
        <Frame  x:Name="ShowBox" Content="" HorizontalAlignment="Left" Height="540" Margin="152,19,0,0" VerticalAlignment="Top" Width="630"/>

    </Grid>
</Window>
