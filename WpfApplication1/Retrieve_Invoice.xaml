<Page x:Class="WpfApplication1.Retrieve_Invoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Retrieve Invoice" Height="540" Width="630">
    <Grid Background="Gray">
        <ComboBox x:Name="ComboBox_Invoice" HorizontalAlignment="Left" Height="25" Margin="10,42,0,0" VerticalAlignment="Top" Width="116"/>
        <Label Content="Retrieve Invoice" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="220,3,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.474,-0.192" Width="187" FontWeight="Bold" FontSize="22"/>
        <StackPanel Height="488" Margin="136,42,0,0" VerticalAlignment="Top">
            <Grid Margin="0,0,10,0">
                <TextBox x:Name="Customer_Name" Height="23" TextWrapping="Wrap" Margin="0,0,359,0" IsEnabled="False"/>
                <TextBox x:Name="Order_date" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Height="23" Margin="380,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" IsEnabled="False"/>
            </Grid>
            <Grid Margin="0,0,10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="56*"/>
                    <ColumnDefinition Width="188*"/>
                    <ColumnDefinition Width="92*"/>
                    <ColumnDefinition Width="102*"/>
                    <ColumnDefinition Width="15*"/>
                    <ColumnDefinition Width="31*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="Customer_Phone" Height="23" TextWrapping="Wrap" Margin="0,0,33,0" IsEnabled="False" Grid.ColumnSpan="2"/>
                <TextBox x:Name="InvoiceNumber" Height="23" TextWrapping="Wrap" Margin="4,0,0,0" Grid.ColumnSpan="3" Grid.Column="3" IsEnabled="False"/>
            </Grid>

            <Grid Margin="0,5,0,0" HorizontalAlignment="Left" Width="484" Height="325">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="29*"/>
                    <ColumnDefinition Width="455*"/>
                </Grid.ColumnDefinitions>
                <DataGrid x:Name="Retrieve_Invoice_DataGrid" Grid.ColumnSpan="2" Margin="0,0,0,-36"/>
            </Grid>







        </StackPanel>
    </Grid>
</Page>
